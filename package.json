{
  "name": "nginx-linter",
  "version": "0.5.0",
  "description": "A linter and formatter for Nginx configuration files",
  "bin": {
    "nginx-linter": "bin/nginx-linter.js"
  },
  "main": "lib/index.js",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:lint": "eslint bin lib test",
    "eslint:fix": "eslint --fix bin lib test",
    "test:unit": "nyc --reporter=html --reporter=text mocha test/*.spec.js test/**/*.spec.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "nginx",
    "linter"
  ],
  "author": "Jason Hinch",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/jhinch/nginx-linter.git"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "glob": "^7.1.3",
    "pegjs": "^0.10.0",
    "table": "^5.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "eslint": "^5.10.0",
    "mocha": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1"
  }
}
